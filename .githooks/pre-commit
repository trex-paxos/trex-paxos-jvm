#!/bin/bash

# Make script exit on first error
set -e

# Define the expected header pattern for SPDX format
HEADER_PATTERN="SPDX-FileCopyrightText:.*SPDX-License-Identifier: Apache-2\.0"

# Get all staged .java files
files=$(git diff --cached --name-only --diff-filter=ACMR | grep "\.java$" || true)

if [ -z "$files" ]; then
    exit 0
fi

MISSING_HEADERS=0

# Check each Java file
for file in $files; do
    if ! head -n 5 "$file" | grep -z "$HEADER_PATTERN" > /dev/null; then
        echo "Error: Missing or invalid SPDX copyright header in $file"
        MISSING_HEADERS=1
    fi
done

if [ $MISSING_HEADERS -ne 0 ]; then
    echo "Please add the SPDX copyright header to the above files."
    echo "Header template (copy from banner.txt):"
    cat << 'EOF'
// SPDX-FileCopyrightText: 2024 - 2025 [Your Name]
// SPDX-License-Identifier: Apache-2.0
EOF
    exit 1
fi

exit 0
